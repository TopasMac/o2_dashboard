<style>
  /* ---- Design tokens (match your example) ---- */
  :root {
    --font-sans: "Inter", "Helvetica Neue", Arial, sans-serif;
    --text: #111827;   /* slate-900-ish */
    --muted: #6b7280;  /* gray-500 */
    --brand: #111827;  /* adjust to brand if needed */
    --border: #e5e7eb; /* gray-200 */
    --h1: 18px;
    --h2: 14px;
    --base: 12px;
    --small: 10px;
    --pad: 8px;
  }

  /* ---- Base (minimal) ---- */
  html, body {
    margin: 0;
    padding: 0;
    font-family: var(--font-sans);
    color: var(--text);
    font-size: var(--base);
    line-height: 1.35;
  }

  /* Headings (light opinions) */
  h1 { font-size: var(--h1); margin: 0 0 8px 0; }
  h2 { font-size: var(--h2); margin: 12px 0 6px 0; color: var(--brand); }
  h3 { font-size: 12px; margin: 10px 0 6px 0; }

  .muted { color: var(--muted); }
  .small { font-size: var(--small); }
  .logo  { height: 24px; display: inline-block; }

  /* A thin divider you can opt into */
  .header-divider,
  .footer-divider {
    border-top: 1px solid var(--border);
    margin-top: 2px;
  }

  /* ---- Layout helpers (opt-in) ---- */
  .container { width: 100%; }
  .row { display: table; width: 100%; table-layout: fixed; }
  .col { display: table-cell; vertical-align: middle; }
  .left  { text-align: left; }
  .right { text-align: right; }
  .center { text-align: center; }

  .mb-0 { margin-bottom: 0; }
  .mb-1 { margin-bottom: 4px; }
  .mb-2 { margin-bottom: 8px; }
  .mb-3 { margin-bottom: 12px; }
  .mb-4 { margin-bottom: 16px; }
  .pt-1 { padding-top: 4px; }
  .pt-2 { padding-top: 8px; }
  .pb-1 { padding-bottom: 4px; }
  .pb-2 { padding-bottom: 8px; }

  /* ---- Content area (opt-in) ---- */
  .pdf-content {
    padding: 6pt 10pt; /* body padding; margins are set via wkhtml options, not here */
    box-sizing: border-box;
  }

  /* ---- Header/Footer shells (opt-in; used by separate header/footer HTML) ---- */
  .pdf-header, .pdf-footer {
    width: 100%;
    box-sizing: border-box;
    padding: 2pt 6pt;
    font-size: var(--small);
  }
  .pdf-header { }
  .pdf-footer { }

  /* ---- Tables (opt-in) ---- */
  table.table { width: 100%; border-collapse: collapse; }
  .table th, .table td { padding: 6px; vertical-align: top; }
  .table.bordered th, .table.bordered td { border: 1px solid var(--border); }
  .table.striped tbody tr:nth-child(odd) td { background: #fafafa; }
  .table.no-border th, .table.no-border td { border: none; }

  /* ---- Page-break helpers ---- */
  .page-break { page-break-before: always; }
  .avoid-break { page-break-inside: avoid; }


  /* ---- Utility colors ---- */
  .bg-teal   { background-color: #008080 !important; }
  .text-white { color: #ffffff !important; }

  thead.bg-teal th,
  thead tr.bg-teal th,
  th.bg-teal {
    background-color: #008080 !important;
    color: #ffffff !important;
  }
</style>